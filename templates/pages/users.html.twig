
{% extends 'base.html.twig' %}
        {% block content %}

        <h1 class="text-center mt-3">Users</h1>

        {% for message in app.flashes('notice') %}
        <div class="flash-notice mt-4 text-center border border-dark bg-success w-25 m-auto pt-3 pb-3 text-light">
            {{ message }}
        </div>
    {% endfor %}

        <table class="table table-striped w-50 m-auto mt-5 mb-5 border border-dark">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="text-center">
                            {% if user.roles[0] == 'ROLE_ADMIN' %}
                            <span style="color: red;">{{ user.username|capitalize  }} is the admin</span>
                        {% else %}
                        {{ user.username|capitalize  }}
                        {% endif %}                        
                        </td>
                        <td class="border border-dark text-center">
                            {% if user.roles[0] != 'ROLE_ADMIN' %}
                            <a href="{{path('delete_user',{'id':user.id}) }}" class ="btn btn-danger">Delete</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% endblock %}

